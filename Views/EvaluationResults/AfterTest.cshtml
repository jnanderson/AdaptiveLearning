@model IEnumerable<AdaptiveLearningFinal.Models.ResultsModel>

@{
    ViewBag.Title = "AfterTest";
}

<h2>Test Results: @Model.First().ClassName</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
  
<table>
    <tr>
        <td>
            Percentage Correct: @Model.First().PercentageCorrect %
        </td>
    </tr>
    <tr>

        <th>
            Question
        </th>
        <th>
            Correct Answer
        </th>
        <th>
            Was User Answer Correct
        </th>
        <th>
            Answer Explanation
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Question)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionCorrectAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionExplanation)
            </td>

        </tr>
    }
    
   
</table>
     @Html.ActionLink("Back to Course Selection", "Index", "EvaluationResults")
}
@model AdaptiveLearningFinal.Models.Questions

@{
    ViewBag.Title = "Index";
}

<h2>PreTest</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("NextQuestion", "ShowTest", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    @Html.Hidden("id", Model.QuestionID)
    
<table style ="border:none">

    <tr>
        <td style ="border:none">
            @Html.DisplayFor(x => x.Question)
        </td>
    </tr>
    <tr>
        <td style ="border:none">
            @Html.RadioButton("Answer", Model.QuestionAnswerA)
            @Html.DisplayFor(item => item.QuestionAnswerA)
            
        </td>
    </tr>
    <tr>
        <td style ="border:none">
            @Html.RadioButton("Answer", Model.QuestionAnswerB)
            @Html.DisplayFor(item => item.QuestionAnswerB)
            
        </td>
    </tr>
    <tr>
        @if (Model.QuestionAnswerC != null)
        {
            <td style ="border:none">
                @Html.RadioButton("Answer", Model.QuestionAnswerC)
                @Html.DisplayFor(item => item.QuestionAnswerC)
                
            </td>
        }
    </tr>        
    <tr>       
        @if (Model.QuestionAnswerD != null)
        {
            <td style ="border:none">
                @Html.RadioButton("Answer", Model.QuestionAnswerD)
                @Html.DisplayFor(item => item.QuestionAnswerD)
                
            </td>
        }

    </tr>


    <tr>
        <td style ="border:none">
           <input type="submit" Value="Next Question"/>
        </td>
    </tr>
</table>
    
}